      padding: 0 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 138px;
    }

    .nav-logo img {
      height: 72px;
      width: auto;
    }

    .nav-center {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      flex: 1;
      justify-content: center;
      margin: 0 1rem;
    }

    .nav-button {
      color: white;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s ease;
      min-width: 70px;
      height: 40px;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
