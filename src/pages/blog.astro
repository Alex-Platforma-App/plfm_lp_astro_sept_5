<!-- JavaScript for Cards and Modal -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('comingSoonModal');
  const blogCards = document.querySelectorAll('.blog-card');
  const closeBtn = document.getElementById('closeModal');
  const okBtn = document.getElementById('modalOkButton');
  
  // Add click event to all blog cards
  blogCards.forEach(card => {
    card.addEventListener('click', function() {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    });
    
    // Hover effects
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-4px)';
      this.style.boxShadow = '0 10px 25px 0 rgba(0, 0, 0, 0.15)';
    });
    
    card.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0)';
      this.style.boxShadow = '0 1px 3px 0 rgba(0, 0, 0, 0.1)';
    });
  });
  
  // Close modal functions
  function closeModal() {
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  }
  
  closeBtn.addEventListener('click', closeModal);
  okBtn.addEventListener('click', closeModal);
  
  // Close modal when clicking outside
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      closeModal();
    }
  });
  
  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && modal.style.display === 'flex') {
      closeModal();
    }
  });
  
  // Button hover effects
  closeBtn.addEventListener('mouseenter', function() {
    this.style.backgroundColor = '#F3F4F6';
  });
  
  closeBtn.addEventListener('mouseleave', function() {
    this.style.backgroundColor = 'transparent';
  });
  
  okBtn.addEventListener('mouseenter', function() {
    this.style.transform = 'translateY(-1px)';
  });
  
  okBtn.addEventListener('mouseleave', function() {
    this.style.transform = 'translateY(0)';
  });
});
</script>

